/* 列表 */
.rwlist{
  position:relative;
  margin:20rpx 30rpx 0 30rpx;
  display:flex;
}
.rwlist image{
  width:48px;
  height:48px;
  border-radius:50%;
  margin-right:30rpx;
} 
.bjbq{
  position:absolute;
  top:30px;
  left:8px;
