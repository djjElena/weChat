}
.rwlist .c1{
  display:flex;
  flex-direction:column;
  width: 75%;
  font-size: 14px;
  
}
.rwlist .c1 text:nth-child(1){
  font-size:16px;
}
.rwlist .c1 text:nth-child(2){
  font-size:14px;
  color:#969BA3;
  padding-bottom:35rpx;
  border-bottom:1px solid #F6F7F9;
}
.ell{
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不允许换行*/
  text-overflow: ellipsis/*超出部分 以。。。。代替*/
}
/* 箭头 */
.dsarrow{
    position:absolute;
    top:10px;
    right:10px;
}
.dsarrow::after{
    content:"";
    width:20rpx;
    height:20rpx;
    border-top:2px solid #ccc;
    border-right:2px solid #ccc;
    transform:rotate(45deg);    
    display:inline-block;
}
