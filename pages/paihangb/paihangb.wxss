/*项目*/
.shop{
    padding:0 0 0 20rpx;
    margin-bottom:20rpx;
    display:flex;
    position: relative;
    background-color:#fff;
}
.shop>text{
  position: absolute;
  top:50px;
  left:50px;
  writing-mode: vertical-lr;
  font-size:25px;
  font-weight: bold;
  color:#fff;

}
.shop .shop-img{
    width:120px;
    height:175px;
}
.shop .shop-info{
    border-top:1px solid #F0F1F2;
    width:67%;
    margin-right:0;
    font-size:16px;
    line-height:1.5;
    color:#333;
}
.shop .shop-info>view{
  display:flex;
  flex-direction:column;
  margin-left:15px;
}
.shop .shop-info>view>text{
  border-bottom:1px solid #F0F1F2;
  padding:5px;
}
/* 箭头 */
.arrow2{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.arrow2::after{
    content:"";
    width:15rpx;
    height:15rpx;
    border-top:3px solid #ccc;
    border-right:3px solid #ccc;
    transform:rotate(45deg);
}