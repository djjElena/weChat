/*公共样式 ：箭头*/
.arrow{
    float:right;
}
.arrow::after{
    content:"";
    width:20rpx;
    height:20rpx;
    border-top:2px solid #ccc;
    border-right:2px solid #ccc;
    transform:rotate(45deg);    
    display:inline-block;
}
